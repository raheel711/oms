@model IEnumerable<oms.Models.Product>

@{
    ViewData["Title"] = "Index";
}






<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Customers</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">All Customers</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">List of Customers</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="ProdList" class="table table-bordered table-hover">

                        <thead>
                            <tr class="table-primary">
                                <th>
                                    @Html.DisplayNameFor(model => model.ProductName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Detail)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EstimatePrice)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.AddedBy)
                                </th>
                               
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="font-weight-bold">
                                        @Html.DisplayFor(modelItem => item.ProductName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Detail)
                                    </td>
                                    <td class="font-weight-bold text-danger">
                                        @Html.DisplayFor(modelItem => item.EstimatePrice)/-
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AddedBy)
                                    </td>
                                 
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.ProductId">Edit</a> |
                                        <a asp-action="Details" asp-route-id="@item.ProductId">Details</a> |
                                        <a asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
                <!-- /.card-body -->
            </div>

            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>

        $(function () {
            $('#ProdList').DataTable({
                "paging": true,
                "lengthChange": false,

                "ordering": true,
                "info": true,
                "autoWidth": false,
            });
        });

    </script>
}


