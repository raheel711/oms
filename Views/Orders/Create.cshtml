@model oms.Models.Order

@{
    ViewData["Title"] = "Create";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Customer Order</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active">New Order</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>


<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-8">
                <!-- general form elements -->
                <!-- Input addon -->
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Add new order!</h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create">
                            <label asp-for="CustId"></label>
                            <div class="input-group mb-3">

                                <div class="input-group-prepend">
                                    <span class="input-group-text fa fa-user"></span>
                                </div>
                                <input type="text" asp-for="CustId" class="form-control" placeholder="Select Customer...." required>
                            </div>

                            <label asp-for="OrderTakenBy"></label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                </div>
                                <input type="text" asp-for="OrderTakenBy" class="form-control" placeholder="Order Taken By..." required>
                            </div>

                            <label asp-for="OrderAssignTo"></label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                </div>
                                <input type="text" asp-for="OrderAssignTo" class="form-control" placeholder="Order Assign to..." required>
                            </div>

                            <label asp-for="OpeningAmount"></label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">RS</span>
                                </div>
                                <input type="number" asp-for="OpeningAmount" class="form-control" placeholder="Opening Amount" readonly required>
                                <div class="input-group-append">
                                    <span class="input-group-text">.00</span>
                                </div>
                            </div>

                            <label asp-for="PriceIsFinal"></label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                </div>
                                <input asp-for="PriceIsFinal" class="form-control" placeholder="yes/no" required>
                            </div>

                            <label asp-for="DueDate"></label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-whatsapp"></i></span>
                                </div>
                                <input type="date" asp-for="DueDate" class="form-control" required>
                            </div>

                            <label asp-for="Link"></label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                                </div>
                                <input asp-for="Link" class="form-control" placeholder="Link..." required>
                            </div>
                            
                            <label asp-for="Detail"></label>
                            <div class="input-group">
                                <textarea class="form-control" asp-for="Detail" rows="3" placeholder="Enter Detail..."></textarea>
                            </div>
                            <br />
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary col-md-12" />
                            </div>
                        </form>
                        <!-- /input-group -->
                    </div>
                    <!-- /.card-body -->

                    <div>
                        <a asp-action="Index">Back to List</a>
                    </div>
                </div>
                <!-- /.card -->

            </div>
            <!--/.col (left) -->

        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
